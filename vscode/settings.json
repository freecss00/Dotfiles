{
    "zenMode.centerLayout": false,
    "editor.fontSize": 11,
    "editor.tabCompletion": "off",
    "editor.minimap.enabled": false,
    "files.trimTrailingWhitespace": true,
    "git.path": "/usr/local/bin/git",

    // vscode vim
    "keyboard.dispatch": "keyCode",
    "vim.easymotion": true,
    "vim.surround": true,
    "vim.sneak": true,
    "vim.foldfix": false,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": "#111111",
    "vim.statusBarColors.insert": "#111111",
    "vim.statusBarColors.visual": "#111111",
    "vim.statusBarColors.visualline": "#B48EAD",
    "vim.statusBarColors.visualblock": "#A3BE8C",
    "vim.statusBarColors.replace": "#D08770",
    "vim.leader": "<space>",

    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [ "j", "j" ],
            "after": [ "<esc>" ]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ "space", "space" ],
            "commands": [ "editor.action.quickFix" ]
        },
        {
            "before": ["space", "o"],
            "commands": [ "workbench.action.quickOpen" ]
        },
        {
            "before": [ "Q" ],
            "commands": [ "workbench.action.closeActiveEditor" ]
        },
        {
            "before": [ "Y" ],
            "after": [ "y$" ],
        },
        {
            "before": [ ";" ],
            "after": [ ":" ]
        },
        {
            "before": [ "<C-h>" ],
            "commands": [ "workbench.action.previousEditor" ],
        },
        {
            "before": [ "<C-l>" ],
            "commands": [ "workbench.action.nextEditor" ],
        },
        {
            "before": [ "space", "w", "h" ],
            "commands": [ "workbench.action.focusPreviousGroup" ],
        },
        {
            "before": [ "space", "w", "l" ],
            "commands": [ "workbench.action.focusNextGroup" ]
        },
        {
            "before": [ "space", "w", "H" ],
            "commands": [ "workbench.action.moveEditorToPreviousGroup" ]
        },
        {
            "before": [ "space", "w", "L" ],
            "commands": [ "workbench.action.moveEditorToNextGroup" ]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [ ">"],
            "commands": [ "editor.action.indentLines" ]
        },
        {
            "before": [ "<"],
            "commands": [ "editor.action.outdentLines" ],
        },
        {
            "before": [ "j" ],
            "after": [ "g", "j" ]
        },
        {
            "before": [ "k" ],
            "after": [ "g", "k" ]
        },
    ],
    "vim.handleKeys": {},
    "workbench.colorCustomizations": {
        "statusBar.background": "#111111",
        "statusBar.noFolderBackground": "#111111",
        "statusBar.debuggingBackground": "#111111"
    },

    // python
    "python.terminal.activateEnvironment": false,
    "python.jediEnabled": false,
    "window.zoomLevel": 0,
}